.row
  .col.s12
    = link_to "< Back to list", schools_path, class: "back-link"

.row
  .col.s12.m6.l4
    .card
      .card-image.gradient
        =image_tag @school.image_url || "https://upload.wikimedia.org/wikipedia/commons/d/d0/Lmspic.png"
        %span.card-title= @school.name
      - if @school.about
        .card-content
          %p= raw @school.about
  - if @school.address
    .col.s12.m6.l4
      .card.border-blue
        .card-content
          %span.card-title.orange-text Location
          - if @geocoded_hash.any?
            %p
              #small-map-view
                #map
          %p= @school.address
.row
  .col.s12.m6.l4
    .card.border-green
      .card-content
        .big-number
          .little-card-title Graduation rate
          %span.number= @school.four_yr_graduated
          %span.percent-sign %
          %span.label graduated
        .card-icon
          = image_tag "graduated.png"

        %a.card-details-toggle.grey-text{ href: "#" } Show details v
        .card-details
          .little-numbers
            .little-number
              .number= percentage(@school.four_yr_dropped_out)
              .label
                dropped out
            .little-number
              .number= percentage(@school.four_yr_still_in_school)
              .label
                still in school
            .little-number
              .number= percentage(@school.four_yr_ged)
              .label
                GED

  .col.s12.m6.l4
    .card.border-gold
      .card-content
        .big-number
          .little-card-title School size
          %span.number= @school.total_size
          %span.label students
        .card-icon
          = image_tag "school.png"

        %a.card-details-toggle.grey-text{ href: "#" } Show details v
        .card-details
          .little-numbers
            .little-number
              .number= @school.school_size_9_grade
              .label
                9th
                %br
                Grade
            .little-number
              .number= @school.school_size_10_grade
              .label
                10th
                %br
                Grade
            .little-number
              .number= @school.school_size_11_grade
              .label
                11th
                %br
                Grade
            .little-number
              .number= @school.school_size_12_grade
              .label
                12th
                %br
                Grade
  .col.s12.m6.l4
    .card.border-red
      .card-content
        %span.card-title.orange-text Post-graduate intentions
        %p
          %ul
            %li
              Four-year college
              =@school.post_grad_four_yr_college
              \%
            %li
              Two-year college
              =@school.post_grad_two_yr_college
              \%
            %li
              Unknown
              =@school.post_grad_unknown
              \%
.row
  .col.s12.m6.l4
    .card.border-gold
      .card-content
        %span.card-title.orange-text Other key indicators
        %p
          %ul
            - if @school.attendance_rate
              %li
                Attendance rate
                =@school.attendance_rate
                \%
            - if @school.avg_class_size
              %li
                Average class size
                =@school.avg_class_size
            - if @school.ell_percentage
              %li
                ELL percentage
                =@school.ell_percentage
                \%
  .col.s12.m6.l4
    .card.border-blue
      .card-content
        %span.card-title.orange-text School population
        %p
          %ul
            %li
              Hispanic
              =@school.school_population_hispanic
              \%
            %li
              African American
              =@school.school_population_african_american
              \%
            %li
              White
              =@school.school_population_white
              \%
            %li
              Asian
              =@school.school_population_asian
              \%
            %li
              Multi-race, Non-Hispanic
              =@school.school_population_multi_race_non_hispanic
              \%
  .col.s12.m6.l4
    .card.border-green
      .card-content
        %span.card-title.orange-text How to apply
        %p= raw @school.how_to_apply

