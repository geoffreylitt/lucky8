%ul.tabs
  %li.tab.col.s6
    = link_to "#list-view",
      id: "list-show-link",
      class: :active do
      List
  %li.tab.col.s6
    = link_to "#map-view",
      id: "map-show-link" do
      Map

.row#main-row
  #list-view.col.s12
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Average class size
          %th Graduation rate
          %th
      %tbody
        - @schools.each do |school|
          %tr
            %td= school.name
            %td= school.avg_class_size
            %td= school.four_yr_graduated
            %td= link_to "More info", school
  #map-view.col.s12
    #map
